@{
    ViewBag.Title = "Settings";
}

<h2>App Settings</h2>

@if (ViewBag.SuccessMessage != null)
{ 
    <p style="color:green">Your app settings have been successfully saved.</p>
}

@if (ViewBag.ErrorMessage != null)
{
    <p style="color:red">ViewBag.ErrorMessage</p>
}

@using (Html.BeginForm("Save", "Settings", FormMethod.Post))
{
    <div>
        <div class="form-group">
            <label for="tenant">B2C Tenant Domain</label>
            <input type="text" name="tenant" id="tenant" class="form-control" value="@ViewData["tenant"]">
        </div>
        <div class="form-group">
            <label for="client_id">App ID</label>
            <input type="text" name="client_id" id="client_id" class="form-control" value="@ViewData["client_id"]">
        </div>
        <div class="form-group">
            <label for="sign_in_policy">Sign-In Policy ID</label>
            <input type="text" name="sign_in_policy" id="sign_in_policy" class="form-control" value="@ViewData["sign_in_policy"]">
        </div>
        <div class="form-group">
            <label for="sign_up_policy">Sign-Up Policy ID</label>
            <input type="text" name="sign_up_policy" id="sign_up_policy" class="form-control" value="@ViewData["sign_up_policy"]">
        </div>
        <div class="form-group">
            <label for="edit_profile_policy">Edit Profile Policy ID</label>
            <input type="text" name="edit_profile_policy" id="edit_profile_policy" class="form-control" value="@ViewData["edit_profile_policy"]">
        </div>
        <input type="submit" value="Save" class="btn btn-default">
    </div>
}